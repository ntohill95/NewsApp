<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/minHeight"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/list_padding"
    android:paddingLeft="@dimen/list_padding"
    android:background="@color/colorAccent"
    android:paddingRight="@dimen/list_padding"
    android:paddingStart="@dimen/list_padding">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardMinHeight"
        android:layout_gravity="center"
        card_view:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/news_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout

                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    style="@style/ArticleTitle"
                    android:id="@+id/article_heading"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:padding="@dimen/titlePadding"
                    android:maxLines="2"
                    android:text="test" />

                <TextView
                    style="@style/ArticleDescription"
                    android:id="@+id/article_description"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:padding="@dimen/textPadding"
                    android:layout_weight="1"
                    android:maxLines="4"
                    android:text="test" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>